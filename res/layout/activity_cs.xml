<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CsActivity" >

     <TextView
		        android:id="@+id/Textshow1"
		        android:layout_width="fill_parent"
		        android:layout_height="80dp"
		        android:paddingLeft="20dp"
		        android:paddingTop="10dp"
		        android:background="#FFEBCD"
		        android:text=""
		        android:textColor="#000000"/>
     <TextView
		        android:id="@+id/Textshow2"
		        android:layout_width="fill_parent"
		        android:layout_height="80dp"
		        android:paddingLeft="20dp"
		        android:paddingTop="10dp"
		        android:background="#CAE1FF"
		        android:layout_below="@+id/Textshow1"
		        android:text=""
		        android:textColor="#000000"/>
     
     <TextView
		        android:id="@+id/Textshow3"
		        android:layout_width="fill_parent"
		        android:layout_height="80dp"
		        android:paddingLeft="20dp"
		        android:paddingTop="10dp"
		        android:background="#7CFC00"
		        android:layout_below="@+id/Textshow2"
		        android:text=""
		        android:textColor="#000000"/>
     
     <TextView
		        android:id="@+id/Textshow4"
		        android:layout_width="fill_parent"
		        android:layout_height="80dp"
		        android:paddingLeft="20dp"
		        android:paddingTop="10dp"
		        android:background="#00FA9A"
		        android:layout_below="@+id/Textshow3"
		        android:text=""
		        android:textColor="#000000"/>
     
		

</RelativeLayout>
